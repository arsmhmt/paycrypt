# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key

# Database Configuration
DATABASE_URL=sqlite:///dev.db
# For MySQL: mysql+pymysql://username:password@localhost/db_name

# API Rate Limit
RATE_LIMIT=1000

# Optional: Admin credentials for testing
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Security Configuration - CRITICAL FOR PRODUCTION
ADMIN_SECRET_PATH=admin120724
# IMPORTANT: Change this to a unique, unpredictable string for your deployment
# This protects against bots and scanners targeting common admin paths like /admin
# Examples: management_xyz789, control_abc123, secure_dashboard_2024
# Do NOT use predictable paths like: admin, dashboard, management, control
